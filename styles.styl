

@import url('https://fonts.googleapis.com/css2?family=Manrope:wght@800&display=swap');

// variables

light-cyan = hsl(193, 38%, 86%);
neon-green = hsl(150, 100%, 66%);
grayish-blue = hsl(217, 19%, 38%);
dark-grayish-blue = hsl(217, 19%, 24%);
dark-blue = hsl(218, 23%, 16%);
font-size-quote = 1.75rem;
manrope = 'Manrope', sans-serif;



//mixins
border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments



// main styles

body 
    background-color: dark-blue;
    display: grid;
    place-items: center;
    min-height: 100vh;
    font-family: manrope;
  

img 
    max-width: 100%;
    height: 1.3em;




.heading
    text-align: center;
    font-size: 1rem;
    margin-block-start: 3em;
    color: neon-green;
    letter-spacing: 0.1em
    font-size: 0.7rem;


.container
    background-color: dark-grayish-blue
    position: relative;
    padding-block-end: 3em;
    border-radius(1em);
    width: 19em;
    display: flex;
    flex-direction: column;
    align-items: center;



.advice_text 
    text-align: center;
    color: light-cyan;
    font-size: 1.5rem;
    padding-inline: 1em;
    // padding-block-end: 1em;

    font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
    // display: grid;
    // place-items: center;
    // height: 5em;



.divider
    display: block;
    width: 16em;
    height: 1em;
    margin-inline: auto;
    margin-block-start: 0.8em;




.dice_button
    border: none;
    outline: none;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    padding: 0.5em;
    background: neon-green;
    width: 3em;
    height: 3em;
    margin-inline: auto;
    position: absolute;
    bottom: -1.5em;
    right: 0;
    left: 0;
    cursor pointer



.dice_button 
.dice_image
    &:hover
        transform: rotate(180deg)
        transition: transform, 0.7s ease-in-out;
        box-shadow: 0 0 1em neon-green;

@media (min-width 800px)
    .container
        width: 25em;
        gap: 5px;
    
    .advice_text
        height 100%;
        padding-block-end: 0;
        margin: 0;
    
    .divider
        width: 20em;